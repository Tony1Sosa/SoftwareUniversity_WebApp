@using WebApp.Core.Interfaces

@{
    ViewData["Title"] = "Match Remove";
    var team1 = Model.Team1;
    var team2 = Model.Team2;
}
@model WebApp.Core.Models.MatchViewModel

<link rel="stylesheet" href="/css/Team/nicepage.css" media="screen" asp-append-version="true" >
<link rel="stylesheet" href="/css/Team/AddTeam.css" media="screen" asp-append-version="true">

<body class="u-body u-xl-mode">
    <section class="u-clearfix u-section-1" id="sec-9bb9">
      <div class="u-clearfix u-sheet u-sheet-1">
        <div class="u-container-style u-expanded-width u-group u-shape-rectangle u-group-1">
          <div class="u-container-layout u-container-layout-1">
            <div class="u-form u-form-1">
              <form method="POST" class="u-clearfix u-form-spacing-10 u-form-vertical u-inner-form" source="email" name="form" style="padding: 10px;">
              <div class="u-container-style u-group u-palette-1-base u-radius-10 u-shape-round u-group-2">
                <div class="u-container-layout u-container-layout-2">
                  <div class="u-expanded-width u-form u-form-2">
                    <form method="POST" class="u-clearfix u-form-spacing-10 u-form-vertical u-inner-form" source="email" name="form-1" style="padding: 10px;">
                        @{
                            <div class="u-form-email u-form-group">
                                <label for="email-8673" class="u-label">Date: </label>
                                <label for="email-8673" class="u-label">@Model.PlayingDate.ToString("MM/dd/yyyy")</label>
                                <input name="PlayingDate" type="hidden" value="@Model.PlayingDate" />
                            </div>
                            <div class="u-form-email u-form-group">
                                <label for="email-8673" class="u-label">Time: </label>
                                <label for="email-8673" class="u-label">@Model.Time.TimeOfDay</label>
                                <input name="Time" type="hidden" value="@Model.Time" />
                            </div>
                            <div class="u-form-email u-form-group">
                                <label for="email-8673" class="u-label">Home Team: </label>
                                <label for="email-8673" class="u-label">@Model.Team1.Name</label>
                                <input name="Team1" type="hidden" value="@team1" />
                                <input name="Team1Id" type="hidden" value="@Model.Team1.Id" />
                            </div>
                            <div class="u-form-email u-form-group">
                                <label for="email-8673" class="u-label">Away Team: </label>
                                <label for="email-8673" class="u-label">@Model.Team2.Name</label>
                                <input name="Team2" type="hidden" value="@team2" />
                                <input name="Team2Id" type="hidden" value="@Model.Team2.Id" />
                            </div>
                            <input name="Id" type="hidden" value="@Model.Id" />
                            <div class="u-align-center u-form-group u-form-submit">
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Remove</button>
                            </div>
                        }
                    </form>
                  </div>
                </div>
              </div>
              </form>
              
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>