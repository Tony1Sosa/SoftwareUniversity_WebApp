
@using WebApp.Core.Interfaces
@using Microsoft.AspNetCore.Identity
@using WebApp.Core.Models
@inject UserManager<IdentityUser> userManager
@{
    var user = userManager.GetUserAsync(User);
    var userId = user.Result.Id;
}

@{
    ViewData["Title"] = "Traning Info";
    IQueryable<TrainingViewModel> train = ViewData["train"] as IQueryable<TrainingViewModel>;
}
@model IEnumerable<WebApp.Core.Models.TeamViewModel>

<link rel="stylesheet" href="/css/Team/nicepage.css" media="screen" asp-append-version="true" >
<link rel="stylesheet" href="/css/Player/EditPlayer.css" media="screen" asp-append-version="true">

<body class="u-body u-xl-mode">
    <section class="u-clearfix u-section-1" id="sec-9bb9">
        <div class="u-clearfix u-sheet u-sheet-1">
            <div class="u-container-style u-expanded-width u-group u-shape-rectangle u-group-1">
                <div class="u-container-layout u-container-layout-1">
                    <div class="u-form u-form-1">
                        <form method="POST" class="u-clearfix u-form-spacing-10 u-form-vertical u-inner-form" source="email" name="form" style="padding: 10px;">
                            <div class="u-container-style u-group u-palette-1-base u-radius-10 u-shape-round u-group-2">
                                <div class="u-container-layout u-container-layout-2">
                                    <div class="u-expanded-width u-form u-form-2">
                                        <form method="POST" class="u-clearfix u-form-spacing-10 u-form-vertical u-inner-form" source="email" name="form-1" style="padding: 10px;">
                                            @foreach (var training in train)
                                            {
                                                <div class="u-form-group u-form-select u-form-group-1">
                                                    <label for="select-f499" class="u-label">Team</label>
                                                    <div class="u-form-select-wrapper">
                                                        <select id="select-f499" name="TeamId" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white">
                                                            @foreach (var teamModel in Model)
                                                            {
                                                                <option value="@teamModel.Id">@teamModel.Name</option>
                                                            }
                                                        </select>
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="12" version="1" class="u-caret"><path fill="currentColor" d="M4 8L0 4h8z"></path></svg>
                                                    </div>
                                                </div>
                                                <div class="u-form-group u-form-select u-form-group-2">
                                                    <label for="select-dc4c" class="u-label">Program: @training.Program</label>
                                                    <div class="u-form-select-wrapper">
                                                        <select id="select-dc4c" name="Program" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white">
                                                            <option value="Physical">Physical</option>
                                                            <option value="Isometric">Isometric</option>
                                                            <option value="Conditional">Conditional</option>
                                                        </select>
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="12" version="1" class="u-caret"><path fill="currentColor" d="M4 8L0 4h8z"></path></svg>
                                                    </div>
                                                </div>
                                                <div class="u-form-group u-form-select u-form-group-2">
                                                    <label for="select-dc4c" class="u-label">Type: @training.Type</label>
                                                    <div class="u-form-select-wrapper">
                                                        <select id="select-dc4c" name="Type" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white">
                                                            <option value="Easy">Easy</option>
                                                            <option value="Normal">Normal</option>
                                                            <option value="Hard">Hard</option>
                                                        </select>
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="12" version="1" class="u-caret"><path fill="currentColor" d="M4 8L0 4h8z"></path></svg>
                                                    </div>
                                                </div>
                                                <div class="u-form-group u-form-textarea u-form-group-3">
                                                    <label for="textarea-7f1d" class="u-label">Description</label>
                                                    <textarea rows="4" cols="50" id="textarea-7f1d" name="Description" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required=""></textarea>
                                                </div>
                                                <input name="Id" type="hidden" value="@training.Id" />
                                            }
                                            <div class="u-align-center u-form-group u-form-submit">
                                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Edit</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
  </body>