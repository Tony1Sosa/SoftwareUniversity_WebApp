@using Microsoft.AspNetCore.Identity

@model WebApp.Core.Models.HomeViewModel

@inject UserManager<IdentityUser> userManager
@{
    var user = userManager.GetUserAsync(User);
    var userId = user.Result.Id;
}
@{
    ViewData["Title"] = "Add Player";
}

<link rel="stylesheet" href="/css/Player/nicepage.css" media="screen" asp-append-version="true" >
<link rel="stylesheet" href="/css/Player/AddPlayer.css" media="screen" asp-append-version="true">

<body class="u-body u-xl-mode">
    <section class="u-clearfix u-section-1" id="sec-9bb9">
      <div class="u-clearfix u-sheet u-sheet-1">
        <div class="u-container-style u-expanded-width u-group u-palette-1-base u-group-1">
          <div class="u-container-layout u-valign-middle u-container-layout-1">
            <div class="u-form u-form-1">
              <form method="POST" class="u-clearfix u-form-spacing-10 u-form-vertical u-inner-form" source="email" name="form" style="padding: 10px;">
                <input type="hidden" id="siteId" name="siteId" value="1601088">
                <input type="hidden" id="pageId" name="pageId" value="1601098">
                <div class="u-form-group u-form-name">
                  <label for="name-8673" class="u-label">Name</label>
                  <input type="text" placeholder="Enter your Name" id="name-8673" name="name" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required="">
                </div>
                <div class="u-form-email u-form-group">
                    <label for="email-8673" class="u-label">Last Name</label>
                    <input type="text" placeholder="Enter your last name" id="email-8673" name="lastName" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required="" spellcheck="false">
                </div>
                <div class="u-form-email u-form-group">
                    <label for="email-8673" class="u-label">Number</label>
                    <input type="number" placeholder="Enter Player Number" id="email-8673" name="number" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required="" spellcheck="false">
                </div>
                <div class="u-form-group u-form-select u-form-group-3">
                  <label for="select-deef" class="u-label">Position</label>
                    <div class="u-form-select-wrapper">
                        <select id="select-deef" name="position" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required="required">
                            <option value="Goalkeeper">Goalkeeper</option>
                            <option value="Defender">Defender</option>
                            <option value="Midfielder">Midfielder</option>
                            <option value="Forward">Forward</option>
                        </select>
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="12" version="1" class="u-caret"><path fill="currentColor" d="M4 8L0 4h8z"></path></svg>
                    </div>
                    <label for="select-deef" class="u-label">Foot</label>
                    <div class="u-form-select-wrapper">
                        <select id="select-deef" name="foot" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required="required">
                            <option value="Right">Right</option>
                            <option value="Left">Left</option>
                        </select>
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="12" version="1" class="u-caret"><path fill="currentColor" d="M4 8L0 4h8z"></path></svg>
                    </div>
                    <label for="select-deef" class="u-label">Team</label>
                    <div class="u-form-select-wrapper">
                        <select id="select-deef" name="TeamId" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required="required">
                            @foreach (var team in Model.TeamViewModels)
                            {
                                <option value="@team.Id">@team.Name</option>
                            }
                        </select>
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="12" version="1" class="u-caret"><path fill="currentColor" d="M4 8L0 4h8z"></path></svg>
                    </div>
                </div>
                <div class="u-form-date u-form-group u-form-group-4">
                    <label for="date-e1ab" class="u-label">Birthday</label>
                    <input type="date" placeholder="MM/DD/YYYY" id="date-e1ab" name="birthdayDate" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required="">
                </div>
                <input name="UserId" type="hidden" value="@userId" />
                <div class="u-align-center u-form-group u-form-submit">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Add</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>